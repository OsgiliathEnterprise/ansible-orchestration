# This section includes base Calico installation configuration.
# For more information, see: https://projectcalico.docs.tigera.io/master/reference/installation/api#operator.tigera.io/v1.Installation
apiVersion: operator.tigera.io/v1
kind: Installation
metadata:
  name: default
spec:
  # Configures Calico networking.
  calicoNetwork:
    linuxDataplane: Iptables
    # Note: The ipPools section cannot be modified post-install.
    ipPools:
      - blockSize: 26
        cidr: {{ kube_cidr }}
        encapsulation: VXLANCrossSubnet
        natOutgoing: Enabled
        nodeSelector: all()
{% if master_preferred_nic is defined %}
    nodeAddressAutodetectionV4:
      interface: {{ master_preferred_nic }}
{% elif idm_preferred_nic is defined %}
    nodeAddressAutodetectionV4:
      canReach: {{ idm_ip.msg}}
{% endif %}
---

# This section configures the Calico API server.
# For more information, see: https://projectcalico.docs.tigera.io/master/reference/installation/api#operator.tigera.io/v1.APIServer
apiVersion: operator.tigera.io/v1
kind: APIServer
metadata:
  name: default
spec: {}

# This section configures the Calico Gateway API.
# For more information, see: https://projectcalico.docs.tigera.io/master/reference/installation/api#operator.tigera.io/v1.GatewayAPI
apiVersion: operator.tigera.io/v1
kind: GatewayAPI
metadata:
  name: default
spec: {}

